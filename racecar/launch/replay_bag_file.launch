<launch>
  <!-- launch script arguments -->
  <arg name="bag"/>

  <!-- bag file player -->
  <param name="/use_sim_time" value="true"/>
  <node pkg="rosbag" type="play" name="play" output="screen"
        args="$(arg bag) --clock --delay=5"/>
</launch>
